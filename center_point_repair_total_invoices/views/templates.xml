<odoo>
    <data>
        <template id="report_invoice_custom_report" inherit_id="account.report_invoice_document">
            <xpath expr="//t/div/table/thead/tr/th[1]" position="after">
                <th name="th_partner_branch" t-if="partner_branch">
                    <span>Partner Branch</span>
                </th>
            </xpath>
            <xpath expr="//t/div/table/tbody/t/tr/t/td[1]" position="after">
                <t t-if="line.partner_branch">
                    <td colspan="99">
                        <span t-field="line.partner_branch"/>
                    </td>
                </t>
            </xpath>
        </template>
    </data>
</odoo>